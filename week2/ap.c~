#include<stdio.h>

int main()
{
	float a,d;
	int n;
	//give dataz
	printf("Enter the first term of the AP,common difference and number of terms, respectively:");
	scanf("%f%f%d",&a,&d,&n);

	printf("sum of %d terms of the given ap is:%.2f\n",n,(2*a*n+(n-1)*d*n)/2.0);
	return 0;
}
//+ point is ,in this program, u can also sum up the decimal ap's
